{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": {
    "text": "United States COVID 19 Confirmed Cases"
  },
  "data": {
    "url": "states-vega.csv",
    "format": {
      "type": "csv"
    }
  },
  "width": 2000,
  "height": 1000,
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "color": {
          "type": "nominal",
          "field": "state"
        },
        "x": {
          "type": "temporal",
          "field": "date"
        },
        "y": {
          "type": "quantitative",
          "field": "deaths"
        }
      }
    },
    {
      "mark": "point",
      "encoding": {
        "opacity": {
          "value": 0
        },
        "x": {
          "type": "temporal",
          "field": "date"
        }
      },
      "selection": {
        "tooltip": {
          "type": "single",
          "nearest": true,
          "on": "mouseover",
          "fields": ["date"],
          "empty": "none",
          "resolve": "global"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5
      },
      "encoding": {
        "color": {
          "type": "nominal",
          "field": "state"
        },
        "text": {
          "condition": {
            "type": "quantitative",
            "field": "deaths",
            "selection": "tooltip"
          },
          "value": " "
        },
        "x": {
          "type": "temporal",
          "field": "date"
        },
        "y": {
          "type": "quantitative",
          "field": "deaths"
        }
      }
    }
  ]
}
