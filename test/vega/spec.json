{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
      "url": "states-vega.csv",
      "format": {
        "type": "csv"
      }
    },
    "width": 800,
    "height": 400,
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "color": {
            "type": "nominal",
            "field": "state"
          },
          "x": {
            "type": "temporal",
            "field": "date"
          },
          "y": {
            "type": "quantitative",
            "field": "cases"
          }
        }
      },
      {
        "mark": "point",
        "encoding": {
          "opacity": {
            "value": 0
          },
          "x": {
            "type": "temporal",
            "field": "date"
          }
        },
        "selection": {
          "tooltip": {
            "type": "single",
            "nearest": true,
            "on": "mouseover",
            "fields": [
              "date"
            ],
            "empty": "none",
            "resolve": "global"
          }
        }
      },
      {
        "mark": "point",
        "encoding": {
          "color": {
            "type": "nominal",
            "field": "state"
          },
          "opacity": {
            "condition": {
              "selection": "tooltip",
              "value": 1
            },
            "value": 0
          },
          "x": {
            "type": "temporal",
            "field": "date"
          },
          "y": {
            "type": "quantitative",
            "field": "cases"
          }
        }
      },
      {
        "mark": {
          "type": "rule",
          "color": "gray"
        },
        "encoding": {
          "x": {
            "type": "quantitative",
            "field": "x"
          }
        },
        "transform": [
          {
            "filter": {
              "selection": "tooltip"
            }
          }
        ]
      },
      {
        "mark": {
          "type": "text",
          "align": "left",
          "dx": 5,
          "dy": -5
        },
        "encoding": {
          "color": {
            "type": "nominal",
            "field": "state"
          },
          "text": {
            "condition": {
              "type": "quantitative",
              "field": "cases",
              "selection": "tooltip"
            },
            "value": " "
          },
          "x": {
            "type": "temporal",
            "field": "date"
          },
          "y": {
            "type": "temporal",
            "field": "cases"
          }
        }
      }
    ]
  }