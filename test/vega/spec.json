{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "title": "United States COVID 19 Confirmed Cases",
  "data": {
    "url": "states-vega.csv",
    "format": {
      "type": "csv"
    }
  },
  "width": 2000,
  "height": 1000,
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "color": {
          "type": "nominal",
          "field": "state"
        },
        "x": {
          "type": "temporal",
          "field": "date"
        },
        "y": {
          "type": "quantitative",
          "field": "cases"
        }
      }
    },
    {
      "mark": "point",
      "encoding": {
        "opacity": {
          "value": 0
        },
        "x": {
          "type": "temporal",
          "field": "date"
        }
      },
      "selection": {
        "tooltip": {
          "type": "single",
          "nearest": true,
          "on": "mouseover",
          "fields": ["date"],
          "empty": "none",
          "resolve": "global"
        }
      }
    },
    {
      "mark": "point",
      "encoding": {
        "color": {
          "type": "nominal",
          "field": "state"
        },
        "opacity": {
          "condition": {
            "selection": "tooltip",
            "value": 1
          },
          "value": 0
        },
        "x": {
          "type": "temporal",
          "field": "date"
        },
        "y": {
          "type": "quantitative",
          "field": "cases"
        }
      }
    }
  ]
}
